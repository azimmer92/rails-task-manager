<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>
<% @tasks.each do |task| %>
  <h2><%= task.title %></h2>
  <p><%= task.message %></p>
  <%= link_to 'Show the view', task_path(task) %>
  <%= link_to 'Show edit view', edit_task_path(task) %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<%end%>

